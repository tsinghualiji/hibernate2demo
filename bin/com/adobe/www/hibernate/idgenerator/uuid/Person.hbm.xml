<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.itcast.hibernate0909.idgenerator.uuid.Person" table="person">
		<id name="pid" type="java.lang.String">
			<column name="pid"></column>
			<generator class="uuid"></generator>
		</id>
		
		<property name="pname" type="java.lang.String" length="20"></property>
		
		<property name="psex" type="java.lang.String" length="5"></property>
	</class>
</hibernate-mapping>